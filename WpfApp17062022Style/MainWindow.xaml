    <!-- расширение разметки templatebinding-->
    <Window.Resources>
        <ControlTemplate x:Key="BtTmp" TargetType="{x:Type Button}">
            <Grid>
                <!-- привязка templatebinding-->
                <Ellipse Height="45" Width="200" Stroke="{TemplateBinding Background}" Fill="{TemplateBinding Background}"/>
                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </ControlTemplate>
        <!-- создаем свой собственный стиль-->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template" Value="{StaticResource BtTmp }"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <!-- для первой кнопки делаем другое, вторая остается-->
        <Button Name="bt_1" Margin="5" Background="Red" BorderBrush="Black" >Button</Button>
        <Button Name="bt_2" Margin="5" >Button</Button>
    </StackPanel>
